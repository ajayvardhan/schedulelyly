<div class="container">
<h2><%= link_to 'Home', root_path %></h2>
<h2><%= link_to 'List of Exams', exams_url %></h2>
<h1>Schedule an Exam</h1>
<hr/>

<%= form_for :exam, url: exams_path, :html => {:class => "form-horizontal center"} do |f| %>
<div class="row">
  <div class="col-xs-6">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control"  %>
  </div>
  <div class="col-xs-6">
    <%= f.label :client %>
    <%= f.text_field :client, class:"form-control"  %>
  </div>
  </div>
  <br/>
    <%= f.button :Schedule, class:"btn btn-primary" %>
<% end %>